                                        <input style="display: none" type="text" name="name" value="<%=itemlist[item].name%>">
                                        <td style="vertical-align:middle;align-items: center ;"><%=itemlist[item].number%></td>
                                        <td style="vertical-align:middle;align-items: center ;"><%=itemlist[item].price%></td>
